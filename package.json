{
  "name": "cli-mini-program",
  "version": "0.0.1-alpha.1",
  "description": "根据 BlockLang 页面模型生成小程序源代码",
  "scripts": {
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "build:tsc": "tsc",
    "clean": "shx rm -rf dist",
    "build": "npm run clean && npm run build:tsc && shx cp package.json dist/src && shx cp README.md dist/src",
    "uploadCoverage": "codecov --file=coverage/coverage.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blocklang/cli-mini-program.git"
  },
  "author": "xiaohulu",
  "license": "MIT",
  "keywords": [
    "blocklang",
    "cli",
    "mini program",
    "小程序",
    "微信小程序"
  ],
  "bugs": {
    "url": "https://github.com/blocklang/cli-mini-program/issues"
  },
  "homepage": "https://github.com/blocklang/cli-mini-program#readme",
  "bin": "bin/mp.js",
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/node": "^14.0.22",
    "@types/sinon": "^9.0.4",
    "@types/glob": "^7.1.3",
    "@types/prettier": "^2.0.2",
    "codecov": "^3.7.0",
    "husky": "^4.2.5",
    "intern": "^4.8.7",
    "lint-staged": "^10.2.11",
    "shx": "^0.3.2",
    "sinon": "^9.0.2",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/cross-spawn": "^6.0.2",
    "@types/lodash": "^4.14.157",
    "@types/yargs": "^15.0.5",
    "cross-spawn": "^7.0.3",
    "lodash": "^4.17.19",
    "pkg-dir": "^4.2.0",
    "yargs": "^15.3.1",
    "@babel/core": "^7.10.4",
    "@babel/parser": "^7.10.4",
    "@babel/traverse": "^7.10.4",
    "@babel/template": "^7.10.4",
    "@babel/generator": "^7.10.4",
    "@babel/types": "^7.10.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
